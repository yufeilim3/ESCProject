<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.escproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CourseActivity"
            android:label="My Coureses" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ResetpasswordActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".AddCourseActivity"
            android:label="Adding Course"
            android:parentActivityName=".CourseActivity" />
        <activity
            android:name=".MyCourseActivity"
            android:label="Math"
            android:parentActivityName=".CourseActivity" />
        <activity android:name=".MyQuizActivity" />
        <activity android:name=".InstrCourseActivity" />
        <activity android:name=".InstrQuizActivity" />
        <activity android:name=".NewQuizActivity"></activity>
    </application>

</manifest>