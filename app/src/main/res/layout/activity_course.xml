<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.escproject.CourseActivity"
    android:id="@+id/drawer_course">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/adminCourseEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/adminCreateCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Course" />

                    <Button
                        android:id="@+id/adminDeleteCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Course" />

                    <TextView
                        android:id="@+id/adminTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/instr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/instrCurrentCourseTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current course" />

                    <EditText
                        android:id="@+id/instrCourseEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/instrAddCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Course" />

                    <Button
                        android:id="@+id/instrChangeCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Course" />

                    <Button
                        android:id="@+id/instrPostQuizButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Post Quiz"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stud_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/stud1CourseEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/stud1AddCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Course" />

                    <TextView
                        android:id="@+id/stud1TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stud_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/stud2CourseEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/stud2AddCourseButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Course" />

                    <TextView
                        android:id="@+id/stud2TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <android.support.design.widget.NavigationView
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_view"
        app:menu="@menu/nav_course"
        android:layout_gravity="start"
        />

</android.support.v4.widget.DrawerLayout>